############################################################################
#                   Makefile for data_util library
############################################################################
#
include src_dir_path.mk
include ../config.mk

# $(DEP_FILE) is a .dep file generated by fort_depend.py
DEP_FILE = project.dep

FFILES= $(notdir $(wildcard $(srcdir)/*.f90))


OFILES=$(FFILES:%.f90=%.o)

###########################################################################

all: $(OFILES)
include ../rules.mk

clean:
	rm -f *.o *.mod

test:
	@echo No tests exist, yet.

	
depend: $(FFILES)
	echo "Making dependencies ..."
	cd $(srcdir) && $(MAKEDEPEND) -r  $(PROJ_ROOT_PATH) -w -o $(srcdir)/$(DEP_FILE) -f $(FFILES)


-include $(srcdir)/$(DEP_FILE)

